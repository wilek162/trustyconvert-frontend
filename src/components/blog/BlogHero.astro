---
/**
 * Blog hero component for blog post headers
 */
import { blogConfig } from '@/lib/seo/config'

export interface Props {
	title: string
	image: string
	publishDate: string
	category: string
	tags: string[]
}

const { title, image, publishDate, category, tags } = Astro.props

// Get the proper category slug from the config
const categorySlug =
	blogConfig.categories.find((cat) => cat.name === category)?.slug ||
	category.toLowerCase().replace(/\s+/g, '-')
---

<div class="relative mb-12 overflow-hidden bg-deepNavy py-16">
	<!-- Background image with overlay -->
	<div class="absolute inset-0 z-0 opacity-20">
		<img src={image} alt={title} class="h-full w-full object-cover" width="1920" height="1080" />
		<div class="absolute inset-0 bg-gradient-to-t from-deepNavy to-transparent"></div>
	</div>

	<div class="container relative z-10 mx-auto px-4">
		<div class="mx-auto max-w-4xl text-center text-white">
			<!-- Category and date -->
			<div class="mb-4 flex items-center justify-center gap-4 text-sm">
				<a
					href={`/blog/category/${categorySlug}`}
					class="rounded-full bg-trustTeal/20 px-3 py-1 font-medium text-trustTeal hover:bg-trustTeal/30"
				>
					{category}
				</a>
				<span class="text-white/70">{publishDate}</span>
			</div>

			<!-- Title -->
			<h1 class="mb-6 font-heading text-4xl font-bold leading-tight md:text-5xl">
				{title}
			</h1>

			<!-- Tags -->
			<div class="flex flex-wrap justify-center gap-2">
				{
					tags.map((tag) => (
						<a
							href={`/blog/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`}
							class="rounded-full bg-white/10 px-3 py-1 text-sm hover:bg-white/20"
						>
							#{tag}
						</a>
					))
				}
			</div>
		</div>
	</div>
</div>
