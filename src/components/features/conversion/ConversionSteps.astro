---
/**
 * ConversionSteps Component
 * 
 * A reusable component that displays the steps for converting from one format to another.
 */

interface Props {
  sourceFormat: string;
  targetFormat: string;
  sourceName?: string;
  targetName?: string;
}

const { sourceFormat, targetFormat, sourceName, targetName } = Astro.props;

// Use provided names or default to uppercase format IDs
const sourceFormatDisplay = sourceName || sourceFormat.toUpperCase();
const targetFormatDisplay = targetName || targetFormat.toUpperCase();

// Define the steps
const steps = [
  {
    number: 1,
    title: `Upload Your ${sourceFormatDisplay} File`,
    description: 'Select your file by clicking the upload button or drag and drop it into the upload area.'
  },
  {
    number: 2,
    title: `Convert to ${targetFormatDisplay}`,
    description: 'Click the "Convert" button and wait for the conversion process to complete.'
  },
  {
    number: 3,
    title: `Download Your ${targetFormatDisplay} File`,
    description: 'Once conversion is complete, download your converted file instantly.'
  }
];
---

<div>
  <h2 class="mb-8 text-center text-2xl font-semibold text-deepNavy md:text-3xl">
    How to Convert {sourceFormatDisplay} to {targetFormatDisplay}
  </h2>

  <div class="grid gap-6 md:grid-cols-3">
    {steps.map(step => (
      <div class="group relative overflow-hidden rounded-xl border border-trustTeal/20 bg-white p-6 shadow-md text-center transition-all hover:shadow-lg">
        <div class="absolute -right-12 -top-12 h-24 w-24 rounded-full bg-trustTeal/5 transition-transform duration-500 group-hover:scale-150"></div>
        
        <div class="relative z-10">
          <div class="mx-auto mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-gradient-to-br from-trustTeal/20 to-trustTeal/30 text-trustTeal">
            <span class="text-xl font-bold">{step.number}</span>
          </div>
          <h3 class="mb-2 font-semibold text-deepNavy">{step.title}</h3>
          <p class="text-sm text-muted-foreground">{step.description}</p>
        </div>
      </div>
    ))}
  </div>
</div> 