---
import MainLayout from '@/layouts/MainLayout.astro'

const title = 'Frequently Asked Questions - TrustyConvert'
const description =
	"Find answers to common questions about TrustyConvert's file conversion service."
const alternateLanguages = [{ code: 'en', name: 'English' }]

const faqs = [
	{
		question: 'Is TrustyConvert free to use?',
		answer:
			'Yes, TrustyConvert is completely free for basic conversions. We may offer premium features in the future, but our core conversion service will always remain free.'
	},
	{
		question: 'How secure are my files?',
		answer:
			'Your security is our top priority. All files are encrypted during transfer, processed in isolated environments, and automatically deleted after conversion is complete or after 24 hours, whichever comes first.'
	},
	{
		question: 'What file formats do you support?',
		answer:
			'We support a wide range of formats including PDF, DOCX, JPG, PNG, XLSX, CSV, and many more. Check our supported formats section on the homepage for a complete list.'
	},
	{
		question: 'Is there a file size limit?',
		answer:
			'Free accounts can convert files up to 100MB. For larger files, you may need to consider our upcoming premium options.'
	},
	{
		question: 'Do I need to create an account?',
		answer:
			"No, TrustyConvert doesn't require registration. Simply upload your file, convert it, and download the result."
	},
	{
		question: 'How long do you keep my files?',
		answer:
			'We automatically delete all files after conversion is complete or after 24 hours, whichever comes first. We never store your files permanently.'
	}
]
---

<MainLayout title={title} description={description} alternateLanguages={alternateLanguages}>
	<div class="trusty-container py-12">
		<div class="mx-auto max-w-3xl">
			<h1 class="mb-8 text-center">Frequently Asked Questions</h1>

			<div class="space-y-6">
				{
					faqs.map((faq, index) => (
						<div class="rounded-lg border border-border bg-card p-6">
							<h3 class="mb-2 text-xl font-medium">{faq.question}</h3>
							<p class="text-muted-foreground">{faq.answer}</p>
						</div>
					))
				}
			</div>

			<div class="mt-12 text-center">
				<p class="mb-4 text-muted-foreground">Still have questions?</p>
				<a href="mailto:support@trustyconvert.com" class="btn btn-primary">Contact Support</a>
			</div>
		</div>
	</div>
</MainLayout>
